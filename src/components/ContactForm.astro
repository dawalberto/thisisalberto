---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<form class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100">
    <div class="grid gap-6">
        <div class="grid gap-2">
            <label for="name" class="text-sm font-medium text-slate-700">{t('contact.form.name')}</label>
            <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 outline-none transition-all"
                required
            />
        </div>

        <div class="grid gap-2">
            <label for="email" class="text-sm font-medium text-slate-700">{t('contact.form.email')}</label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 outline-none transition-all"
                required
            />
        </div>

        <div class="grid gap-2">
            <label for="subject" class="text-sm font-medium text-slate-700">{t('contact.form.subject')}</label>
            <input 
                type="text" 
                id="subject" 
                name="subject" 
                class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 outline-none transition-all"
                required
            />
        </div>

        <div class="grid gap-2">
            <label for="message" class="text-sm font-medium text-slate-700">{t('contact.form.message')}</label>
            <textarea 
                id="message" 
                name="message" 
                rows="5" 
                class="w-full px-4 py-3 rounded-lg border border-slate-200 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-200 outline-none transition-all resize-none"
                required
            ></textarea>
        </div>

        <button 
            type="submit" 
            class="w-full bg-slate-900 text-white font-medium py-4 rounded-lg hover:bg-slate-800 transition-colors flex items-center justify-center gap-2 group"
        >
            {t('contact.form.send')}
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
        </button>
    </div>
</form>