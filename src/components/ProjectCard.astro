---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import { getIcon } from '../utils/icons';

interface Props {
    project: CollectionEntry<'projects'>;
    lang: string;
    index: number;
}

const { project, lang, index } = Astro.props;
const { Content } = await project.render();

const indexString = (index + 1).toString().padStart(2, '0');
const detailsId = `details-${index}`;
---

<article class="group border-b-4 border-slate-900 py-8 sm:py-12 md:py-20 first:border-t-4">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6 sm:gap-8 md:gap-12">
        <!-- Column 1: Index & Title -->
        <div class="md:col-span-5 flex flex-col justify-between">
            <div>
                <span class="font-mono text-lg sm:text-xl font-bold text-slate-400 mb-3 sm:mb-4 block">/{indexString}</span>
                <h3 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold font-heading text-slate-900 uppercase leading-none mb-4 sm:mb-6 group-hover:text-accent group-hover:[-webkit-text-stroke:1.5px_var(--color-slate-900)] transition-colors">
                    {project.data.title}
                </h3>
            </div>
            
            <div class="flex flex-wrap gap-3 sm:gap-4 mt-6 sm:mt-8 md:mt-0">
                {project.data.repo && (
                    <a href={project.data.repo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-2 sm:px-4 sm:py-2 bg-slate-900 text-white font-bold font-mono text-xs sm:text-sm hover:bg-accent hover:text-slate-900 transition-all border-2 border-slate-900 rounded-3xl shadow-[4px_4px_0px_0px_rgba(26,26,26,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_rgba(26,26,26,1)]">
                        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
                        GITHUB
                    </a>
                )}
                {project.data.demo && (
                    <a href={project.data.demo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 sm:gap-2 px-3 py-2 sm:px-4 sm:py-2 bg-white text-slate-900 font-bold font-mono text-xs sm:text-sm hover:bg-accent transition-all border-2 border-slate-900 rounded-3xl shadow-[4px_4px_0px_0px_rgba(26,26,26,1)] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[2px_2px_0px_0px_rgba(26,26,26,1)]">
                        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                        LIVE DEMO
                    </a>
                )}
            </div>
        </div>

        <!-- Column 2: Description & Tags -->
        <div class="md:col-span-5 flex flex-col gap-4 sm:gap-6">
            <p class="text-base sm:text-lg text-slate-700 font-medium leading-relaxed border-l-4 border-accent pl-3 sm:pl-4">
                {project.data.description}
            </p>
            
            <div class="flex flex-wrap gap-1.5 sm:gap-2">
                {project.data.tags.map(tag => {
                    const icon = getIcon(tag);
                    return (
                        <span class="px-1.5 py-0.5 sm:px-2 sm:py-1 bg-white text-slate-900 text-[10px] sm:text-xs font-bold font-mono border-2 border-slate-900 flex items-center gap-1 sm:gap-2 uppercase rounded-3xl shadow-[2px_2px_0px_0px_rgba(26,26,26,1)]">
                            {icon && <span class="w-3 h-3 sm:w-4 sm:h-4" set:html={icon.svg} />}
                            {tag}
                        </span>
                    );
                })}
            </div>

            <button 
                type="button"
                class="flex items-center gap-2 cursor-pointer text-xs sm:text-sm font-bold font-mono text-slate-900 hover:text-accent transition-colors select-none list-none uppercase tracking-wider mt-auto w-fit group/btn"
                aria-expanded="false"
                aria-controls={detailsId}
                data-toggle-details
            >
                <span class="border-b-2 border-slate-900 pb-0.5">{lang === 'en' ? 'Read details' : 'Leer detalles'}</span>
            </button>
        </div>

        <!-- Column 3: Image -->
        <div class="md:col-span-2">
            {project.data.image && (
                <div class="relative aspect-square bg-slate-100 border-2 border-slate-900 overflow-hidden rounded-3xl group-hover:shadow-[8px_8px_0px_0px_rgba(26,26,26,1)] transition-all duration-300">
                    <Image 
                        src={project.data.image} 
                        alt={project.data.title} 
                        class="w-full h-full p-1 object-cover grayscale group-hover:grayscale-0 transition-all duration-500 rounded-3xl" 
                    />
                    <div class="absolute inset-0 bg-accent/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 mix-blend-multiply rounded-3xl"></div>
                </div>
            )}
        </div>
    </div>

    <!-- Full Width Details Content -->
    <div id={detailsId} class="hidden mt-8 sm:mt-12 border-t-2 border-slate-200 pt-6 sm:pt-8 animate-fade-in">
        <div style="margin-block: 1lh;" class="prose prose-sm sm:prose prose-slate max-w-none prose-headings:font-heading prose-headings:uppercase prose-headings:font-bold prose-p:text-base sm:prose-p:text-lg prose-p:text-slate-600 prose-p:font-medium prose-li:text-base sm:prose-li:text-lg prose-li:text-slate-600 prose-li:font-medium prose-img:rounded-3xl prose-img:border-2 prose-img:border-slate-900">
            <Content />
        </div>
    </div>
</article>

<script>
    function setupProjectToggles() {
        const toggles = document.querySelectorAll('[data-toggle-details]');
        
        toggles.forEach(toggle => {
            // Remove old listeners to prevent duplicates if re-running
            const newToggle = toggle.cloneNode(true);
            toggle.parentNode?.replaceChild(newToggle, toggle);
            
            newToggle.addEventListener('click', (e) => {
                const button = e.currentTarget as HTMLButtonElement;
                const targetId = button.getAttribute('aria-controls');
                const target = document.getElementById(targetId!);
                
                if (target) {
                    const isExpanded = button.getAttribute('aria-expanded') === 'true';
                    button.setAttribute('aria-expanded', (!isExpanded).toString());
                    target.classList.toggle('hidden');
                }
            });
        });
    }

    // Run on initial load
    setupProjectToggles();

    // Run on view transitions navigation
    document.addEventListener('astro:page-load', setupProjectToggles);
</script>
