---
import Layout from '../layouts/Layout.astro';
import Terminal from './Terminal.astro';
import AboutText from './AboutText.astro';
import { Image } from 'astro:assets';
import profileImage from '../assets/thisisalberto-square.png';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const projectsUrl = lang === 'en' ? '/projects' : '/es/projects';
---

<Layout title={t('home.title')} lang={lang} fullWidth={true}>
    <section class="w-full pt-32 pb-12">
        <div class="max-w-4xl mx-auto px-4 flex flex-col items-center text-center animate-fade-in-down">
            <div id="profile-card" class="relative mb-12 group cursor-pointer">
                <div class="absolute inset-0 bg-accent rounded-sm rotate-6 translate-x-2 translate-y-2 border-2 border-slate-900 [@media(hover:hover)]:group-hover:rotate-3 group-[.is-active]:rotate-3 transition-transform duration-300 -z-10"></div>
                <div class="bg-white border-2 border-slate-900 rounded-sm shadow-[4px_4px_0px_0px_rgba(26,26,26,1)]">
                    <div class="relative size-60 overflow-hidden rounded-t-sm">
                        <div class="absolute inset-0 flex items-center justify-center transition-transform duration-500 ease-in-out [@media(hover:hover)]:group-hover:-translate-y-full group-[.is-active]:-translate-y-full">
                            <div class="text-6xl animate-float">ðŸ¦Š</div>
                        </div>
                        <div class="absolute inset-0 transition-transform duration-500 ease-in-out translate-y-full [@media(hover:hover)]:group-hover:translate-y-0 group-[.is-active]:translate-y-0">
                            <Image src={profileImage} alt="Alberto GarcÃ­a Sola" class="size-60 object-cover" width={480} height={480} densities={[1.5, 2]} />
                        </div>
                    </div>
                </div>
            </div>
            <h1 class="font-heading font-bold text-3xl md:text-4xl lg:text-5xl mb-6 text-slate-900">
                {t('home.hero.title')}
            </h1>
            <!-- <p class="text-xl md:text-2xl text-slate-900 max-w-2xl mx-auto font-medium">
                {t('home.hero.subtitle')}
            </p> -->
        </div>
    </section>

    <section class="bg-accent w-full py-16 border-y-2 border-slate-900">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h1 class="font-heading font-bold text-5xl md:text-6xl lg:text-7xl mb-6 text-slate-900">
                {t('home.cta.role_prefix')}
                <span class="relative inline-block z-10">
                    {t('home.cta.role_highlight')}
                    <span class="absolute bottom-2 left-0 w-full h-3 bg-white -z-10 -rotate-2"></span>
                </span>
                {t('home.cta.role_suffix')}
            </h1>
            <p class="text-xl md:text-2xl text-slate-900 max-w-2xl mx-auto font-medium mb-8">
                {t('home.cta.description')}
            </p>
            <div class="flex flex-wrap gap-4 justify-center">
                <a href={projectsUrl} class="inline-block px-8 py-4 bg-white border-2 border-slate-900 shadow-[4px_4px_0px_0px_rgba(26,26,26,1)] hover:translate-x-0.5 hover:translate-y-0.5 hover:shadow-[2px_2px_0px_0px_rgba(26,26,26,1)] transition-all duration-200 rounded-xl font-bold text-slate-900 text-lg">
                    {t('home.viewWork')}
                </a>
            </div>
        </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 mt-24">
        <Terminal />
    </div>

    <section class="max-w-3xl mx-auto px-4">
        <div class="bg-white border-2 border-slate-900 shadow-[8px_8px_0px_0px_rgba(26,26,26,1)] rounded-sm py-8 md:py-12 px-6 md:px-10">
            <h2 class="text-3xl font-bold font-heading text-center mb-8 text-slate-900">{t('home.about')}</h2>
            <div class="prose prose-lg prose-slate mx-auto text-slate-700">
                <AboutText lang={lang} />
            </div>
        </div>
    </section>

    <section class="bg-accent w-full py-20 mt-24 border-t-2 border-slate-900 -mb-12">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h2 class="font-heading font-bold text-4xl md:text-5xl mb-8 text-slate-900">
                {t('home.techStack')}
            </h2>
            <div class="flex flex-wrap gap-4 justify-center">
                {
                    ['TypeScript', 'React', 'Tailwind CSS'].map((tech) => (
                        <span class="inline-block px-6 py-3 bg-slate-900 text-white border-2 border-slate-900 rounded-xl font-bold shadow-[4px_4px_0px_0px_rgba(26,26,26,1)]">
                            {tech}
                        </span>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>

<style>
    .animate-fade-in-down {
        animation: fadeInDown 0.8s ease-out;
    }
    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    function toggleProfile(e: Event) {
        const target = e.currentTarget as HTMLElement;
        target.classList.toggle('is-active');
    }

    function setupProfileCard() {
        const card = document.getElementById('profile-card');
        if (card) {
            card.removeEventListener('click', toggleProfile);
            card.addEventListener('click', toggleProfile);
        }
    }

    setupProfileCard();
    document.addEventListener('astro:page-load', setupProfileCard);
</script>