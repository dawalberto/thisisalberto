---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const year = new Date().getFullYear();
---
<footer class="py-8 border-t-2 border-slate-900 bg-slate-900">
    <div class="max-w-4xl mx-auto px-4 text-center text-slate-300 text-sm font-medium">
        <p>{t('footer.made')}</p>
        <p class="mt-2 font-bold text-white">&copy; 2021 / {year}</p>
    </div>
</footer>
